{
  "name": "codemurmur",
  "displayName": "CodeMurmur",
  "description": "Let your code speakâ€”voice annotations inside VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
     "activationEvents": [
      "onStartupFinished",
      "onLanguage:*"
    ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codemurmur.recordMurmur",
        "title": "codemurmur: Record Voice Note"
      },
      {
      "command": "codemurmur.playMurmur",
      "title": "codemurmur: Play Murmur"
      },
      {
      "command": "codemurmur.confirmDeleteMurmur",
      "title": "codemurmur: Confirm Delete Murmur"
      },
      {
      "command": "codemurmur.editMurmur",
      "title": "codemurmur: Confirm Editing Murmur"
      }
    ],
    "keybindings": [
      {
        "command": "codemurmur.recordMurmur",
        "key": "alt+f5",
        "when": "editorTextFocus"
      }
    ],
   "files": [
      "out",
      "murmur.svg"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "murmur": "^2.1.2",
    "node-record-lpcm16": "^1.0.1"
  }
}
